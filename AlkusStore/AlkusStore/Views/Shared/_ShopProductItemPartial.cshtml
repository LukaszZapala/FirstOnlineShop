@model AlkusStore.Models.Entities.Product

<div class="panel panel-body">

    <div class="col-md-2">
        <img src="@Model.ImagePath" alt="..." style="width: 100%" />
    </div>

    <div class="col-md-10">
        <h4>@Model.Name</h4>
        <h5>Cena za sztukę: <span class="label label-danger">@Model.Price.ToString("c")</span></h5>
        <h5 >Ilość produktów w magazynie: <strong>@Model.Stock</strong></h5>

        <div class="pull-right">
            @using (Html.BeginForm("List", "ShoppingCart"))
            {
                @Html.Hidden("productId", Model.Id)
                <input type="submit" class="btn btn-success" value="Dodaj do koszyka" />
            }
        </div>
    </div>

</div>