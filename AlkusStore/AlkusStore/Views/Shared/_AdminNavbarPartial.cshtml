@using Microsoft.AspNet.Identity

<div class="navbar navbar-default">
    <div class="container-fluid">

        <div class="navbar-header">
            <a href="@Url.Action("Index", "Admin")" class="navbar-brand">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Panel Administracyjny
            </a>
        </div>
        
        <div class="navbar-left">
            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Sklep
                    </a>
                </li>
            </ul>
        </div>

        <div class="navbar-right">         
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()

                <ul class="nav navbar-nav" style="margin-right: 20px;">
                    <li>
                        <a id="loginLink" href="@Url.Action("Index", "Admin", routeValues: null)">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Witaj @User.Identity.GetUserName()
                        </a>
                    </li>
                    <li>
                        <a id="registerLink" href="javascript:document.getElementById('logoutForm').submit()">
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Wyloguj
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>