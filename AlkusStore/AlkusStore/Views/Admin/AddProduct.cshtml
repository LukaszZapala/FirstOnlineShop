@model AlkusStore.Models.Entities.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sklep Alkus - Edytuj " + Model.Name;
}

<div class="panel" style="width: 30%; margin: 0 auto; margin-bottom: 5%;">
    <div class="panel-heading panel-primary">
        <h4 class="text-center">
            <span class="glyphicon glyphicon-plus"></span> Nowy produkt
        </h4>
    </div>
    <div class="panel-body">
        @if (Model.ImagePath != null)
        {
            <div class="text-center">
                <img src="@Model.ImagePath" alt="..." width="100px" />
            </div>
        }
        
        @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                <label>Nazwa</label>
                @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Kategoria</label>
                @Html.TextBoxFor(x => x.Category, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Opis</label>
                @Html.TextAreaFor(x => x.Description, 8, 1, new { @class = "form-control" })
            </div>
            <div class="form-group pull-left">
                <label>Cena</label>
                @Html.TextBoxFor(x => x.Price, null, new { @class = "form-control" })
            </div>
            <div class="form-group pull-right">
                <label>Ilość sztuk w magazynie</label>
                @Html.TextBoxFor(x => x.Stock, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Adres do obrazka</label>
                @Html.TextBoxFor(x => x.ImagePath, null, new { @class = "form-control" })
            </div>
            <div class="form-group text-center">
                <input type="submit" class="btn btn-success" value="Zapisz" />
            </div>
        }
    </div>

</div>
