@using AlkusStore.Models
@model AlkusStore.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Sklep Alkus - Logowanie";
}

<div class="panel" style="width: 30%; margin: 0 auto; margin-bottom: 2%;">
    <div class="panel-heading panel-primary">
        <h4 class="text-center">Logowanie do sklepu Alkus</h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <div class="form-group">
                <p class="pull-right">
                    @Html.ActionLink("Nie masz konta? Załóż je!", "Register")
                </p>
                <p class="pull-left">
                    @Html.ActionLink("Zapomniałeś hasło?", "ForgotPassword")
                </p>
            </div>

        </div>
        <div class="panel-footer text-center">
            <input type="submit" value="Zaloguj" class="btn btn-primary" />
        </div>
    }

</div>

@if (@ViewBag.LoginError != null)
{
    <div class="alert alert-danger" style="width: 30%; margin: 0 auto; margin-bottom: 2%;">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Błąd!</strong> @ViewBag.LoginError
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}